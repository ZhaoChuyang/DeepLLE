{
    "name": "base_isp_exp",
    "base": "deepisp/configs/base.json",
    "data_factory": {
        "train": {
            "names": ["mbllen_noisy", "ve_lol_real_train", "lol_all", "sice_all"],
            "batch_size": 32,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "RandomCrop",
                    "args": {
                        "size": 256
                    }
                },
                {
                    "name": "RandomHorizontalFlip",
                    "args": {
                        "flip_prob": 0.5
                    }
                },
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]

        },
        "valid": {
            "names": "lol_val",
            "batch_size": 4,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]
        },
        "test": {
            "img_dir": "/home/chuyang/Workspace/datasets/test",
            "batch_size": 2,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]
        }
    },

    "model": {
        "name": "UNetBaseline",
        "args": {
            "bilinear": true,
            "depth": 4,
            "base_dim": 16
        }
    },

    "trainer": {
        "epochs": 100,
        "iters_per_epoch": -1,
        "saved_period": 500,
        "save_last": 3,
        "eval_period": 100,
        "log_period": 50,
        "save_dir": "../event_logs",
        "verbosity": 2,
        "monitor": "min total_loss",
        "max_eval_iters": -1,
        "tensorboard": true,
        "resume_checkpoint": "model_best.pt",
        "use_grad_clip": false
   },

   "solver": {
        "optimizer": {
            "name": "Adam",
            "args": {
                "lr": 3e-3
            }
        },
        "lr_scheduler": {
            "name": "WarmupMultiStepLR",
            "args": {
                "milestones": [4000, 10000, 30000, 100000],
                "warmup_iters": 0,
                "warmup_factor": 0.1
            }
        }
   },

   "test": {
        "resume_checkpoint": "model_best.pt",
        "save_dir": ""
   }
}