{
    "name": "base_isp_exp",
    "data_factory": {
        "train": {
            "names": ["lol_train", "sice_all"],
            "batch_size": 2,
            "num_workers": 0,
            "_transforms": [
                {
                    "name": "RandomCrop",
                    "args": {
                        "size": 512
                    }
                },
                {
                    "name": "RandomHorizontalFlip",
                    "args": {
                        "flip_prob": 0.5
                    }
                },
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ],
            "transforms": [
                {
                    "name": "RandomCrop",
                    "args": {
                        "size": 800
                    }
                },
                {
                    "name": "RandomHorizontalFlip",
                    "args": {
                        "flip_prob": 0.5
                    }
                },
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]

        },
        "valid": {
            "names": "lol_val",
            "batch_size": 16,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]
        },
        "test": {
            "img_dir": "/data/chuyang/datasets/test/Test",
            "batch_size": 2,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]
        }
    },

    "model": {
        "name": "UNetBaseline",
        "args": {
            "bilinear": false
        }
    },

    "trainer": {
        "epochs": 5,
        "iters_per_epoch": -1,
        "saved_period": 500,
        "eval_period": 100,
        "log_period": 50,
        "save_dir": "../event_logs",
        "verbosity": 2,
        "monitor": "min valid_total_loss",
        "max_eval_iters": -1,
        "tensorboard": true,
        "_resume_checkpoint": "/data/chuyang/event_logs/base_isp_exp/checkpoints/model_best.pt"
   },

   "solver": {
        "optimizer": {
            "name": "Adam",
            "args": {
                "lr": 3e-4
            }
        }
   },

   "test": {
        "resume_checkpoint": "/data/chuyang/event_logs/base_isp_exp/checkpoints/model_best.pt",
        "save_dir": "../event_logs/base_isp_exp/test/Test"
   }
}