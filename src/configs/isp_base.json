{
    "name": "base_isp_exp",
    "data_factory": {
        "train": {
            "names": ["lol_train"],
            "batch_size": 10,
            "num_workers": 4,
            "transforms": [
                {
                    "name": "RandomCrop",
                    "args": {
                        "size": 512
                    }
                },
                {
                    "name": "RandomHorizontalFlip",
                    "args": {
                        "flip_prob": 0.5
                    }
                },
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]

        },
        "valid": {
            "names": "lol_val",
            "batch_size": 4,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]
        },
        "test": {
            "img_dir": "/data/chuyang/datasets/LOL/eval15/low",
            "batch_size": 2,
            "num_workers": 0,
            "transforms": [
                {
                    "name": "ToTensor",
                    "args": {}
                }
            ]
        }
    },

    "model": {
        "name": "UNetBaseline",
        "args": {
            "bilinear": true
        }
    },

    "trainer": {
        "epochs": 100,
        "iters_per_epoch": -1,
        "saved_period": 500,
        "eval_period": 100,
        "log_period": 50,
        "save_dir": "../event_logs",
        "verbosity": 2,
        "monitor": "min valid_total_loss",
        "max_eval_iters": -1,
        "tensorboard": true,
        "resume_checkpoint": "/data/chuyang/event_logs/base_isp_exp/checkpoints/model_best.pt",
        "use_grad_clip": true
   },

   "solver": {
        "_optimizer": {
            "name": "SGD",
            "args": {
                "lr": 3e-5
            }
        },
        "optimizer": {
            "name": "Adam",
            "args": {
                "lr": 2e-4
            }
        },
        "lr_scheduler": {
            "name": "WarmupMultiStepLR",
            "args": {
                "milestones": [2000, 4000],
                "warmup_iters": 0,
                "warmup_factor": 0.1
            }
        }
   },

   "test": {
        "resume_checkpoint": "/data/chuyang/event_logs/base_isp_exp/checkpoints/model_best.pt",
        "save_dir": "../event_logs/base_isp_exp/test/lol"
   }
}